# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/ducha_db
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/ducha_test_db

# Redis配置
REDIS_URL=redis://localhost:6379

# JWT配置
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost"]

# 邮件配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@example.com

# 应用配置
APP_NAME=政府效能督查系统
APP_VERSION=1.0.0
DEBUG=True

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 系统集成配置 (可选)
OA_SYSTEM_URL=http://oa.example.com
HR_SYSTEM_URL=http://hr.example.com
FINANCE_SYSTEM_URL=http://finance.example.com

# 消息推送配置 (可选)
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
SMS_API_KEY=your-sms-api-key